{
  "manifest_version": 2,
  "name": "YTIDC",
  "version": "0.1.0",

  "description": "Cleans up YouTube for things you absolutely do not care about.",

  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png",
    "192": "icons/192.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["ytidc.js"]
    }
  ]
}
